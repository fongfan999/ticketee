<header>
  <h1><%= @user %></h1>

  <ul class="actions">
    <li><%= link_to "Edit User", [:edit, :admin, @user], class: "edit" %></li>
    <li><%= link_to "Archive User", [:archive, :admin, @user],
      class: "delete", method: :patch,
      data: { confirm: "Are you sure you want to archive this user?" } %></li>
  </ul>
</header>

<% if @user.roles.any? %>
  <ul>
    <% @user.roles.each do |role| %>
      <li><%= role.project.name %>: <%= role.role.titleize %></li>
    <% end %>
  </ul>
<% else %>
  <p>This user has no roles.</p>
<% end %>